<h1><%= title %></h1>
<form method="POST">
  <div class="form-group">
    <label for="title">Title: </label>
    <input
      id="title"
      name="title"
      placeholder="<%=currentUser.first_name%> is typing..."
      type="title"
    />
  </div>
  <div class="form-group">
    <label for="message">Message: </label>
    <input name="message" type="message" placeholder="Type a message..." />
  </div>

  <button type="submit" class="btn-primary">Send</button>
</form>
<% if(errors) { %>
<ul>
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
